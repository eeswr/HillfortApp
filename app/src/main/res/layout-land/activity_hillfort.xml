<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="org.wit.hillfort.activities.HillfortActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        app:elevation="0dip"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbarAdd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:titleTextColor="@color/colorPrimary"
          android:background="@color/colorPrimaryDark"
          />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:fillViewport="true">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/hillfortTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:hint="@string/hint_hillfortTitle"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hillfortDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hillfortTitle"
            android:layout_below="@+id/hillfortTitle"
            android:hint="@string/hint_hillfortDate"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="14sp" />


        <Button
            android:id="@+id/button_date_1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/hillfortDescription"
            android:layout_below="@+id/hillfortDescription"
            android:layout_marginEnd="99dp"
            android:background="@drawable/roundedbutton"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Change Date"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/chooseImage"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/hillfortDescription"
            android:layout_below="@+id/button_date_1"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/roundedbutton"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/button_addImage"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/hillfortImage"
            android:layout_width="230dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/hillfortLocation"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/hillfortDescription"
            android:layout_alignTop="@+id/chooseImage"
            android:layout_marginStart="19dp"
            android:background="@drawable/roundedbutton"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:stateListAnimator="@null"
            android:text="@string/button_location"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hillfortLocation"
            android:layout_below="@+id/hillfortLocation"
            android:gravity="center"
            android:text="(hold + drag marker to set hillfort location)"
            android:textColor="@color/colorPrimary"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/chooseImage"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/roundedbutton"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:stateListAnimator="@null"
            android:text="@string/button_addhillfort"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
      </RelativeLayout>
    </ScrollView>

  </RelativeLayout>
</android.support.constraint.ConstraintLayout>
